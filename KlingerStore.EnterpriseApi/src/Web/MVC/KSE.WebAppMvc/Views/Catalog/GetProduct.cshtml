@model ProductViewModel
@{
    ViewData["Title"] = "GetProduct";
}

<br />

<div class="card">
    <div class="row no-gutters">
        <aside class="col-md-6">
            <article class="gallery-wrap">
                <div class="img-big-wrap">
                    <a href="#"><img src="~/imagens/produtos/@Model.Image"></a>
                </div> 
                <div class="thumbs-wrap">
                    <a href="#" class="item-thumb"> <img src="~/imagens/produtos/@Model.Image"></a>                    
                </div> 
            </article> 
        </aside>
        <main class="col-md-6 border-left">
            <article class="content-body">
                <form asp-controller="Cart" asp-action="AddItemCart" method="post">

                    <input type="hidden" name="ProductId" id="ProductId" value="@Model.Id" />

                    <h2 class="title">@Model.Name</h2>

                    <div class="rating-wrap my-3">
                        <ul class="rating-stars">
                            <li style="width:80%" class="stars-active">
                                <img src="bootstrap-ecommerce-html/images/icons/stars-active.svg" alt="">
                            </li>
                            <li>
                                <img src="bootstrap-ecommerce-html/images/icons/starts-disable.svg" alt="">
                            </li>
                        </ul>
                        <small class="label-rating text-muted">132 Avaliações</small>
                        <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> @this.StockMessage(Model.QuantityStock) </small>
                    </div>

                    <div class="mb-3">
                        <var class="price h4">@this.CurrencyFormat(Model.Value)</var>
                        <span class="text-muted"></span>
                    </div>

                    <p>@Model.Description</p>

                    <dl class="row">
                        <dt class="col-sm-3">Model#</dt>
                        <dd class="col-sm-9"></dd>

                        <dt class="col-sm-3">Color</dt>
                        <dd class="col-sm-9"></dd>

                        <dt class="col-sm-3">Delivery</dt>
                        <dd class="col-sm-9"></dd>
                    </dl>

                    <hr>
                    <div class="row">
                        <div class="form-group col-md flex-grow-0">
                            <label>Quantidade</label>
                            <select id="Quantity" name="Quantity" class="form-control">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <a asp-action="Cart" asp-controller="CartBuyNow" class="btn  btn-primary"> Comprar Agora </a>
                    <button type="submit" class="btn  btn-outline-primary"> <span class="text">Adicionar Carrinho</span> <i class="fas fa-shopping-cart"></i>  </button>
                </form>
            </article> 
        </main> 
    </div> 
</div> 