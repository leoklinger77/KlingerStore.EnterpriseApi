@model IPagedViewModel


    <ul class="pagination justify-content-center">

        @if (@Model.PageIndex == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-query="@Model.Query" tabindex="-1">Previous</a>
            </li>
        }

        @{
            for (int i = 1; i < Model.TotalPages + 1; i++)
            {
                if (Model.PageIndex == i)
                {
                    <li class="page-item active">
                        <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@i" asp-route-query="@Model.Query">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@i" asp-route-query="@Model.Query">@i</a>
                    </li>
                }

            }
        }
        @if (@Model.PageIndex == Model.TotalPages)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="@Model.ReferenceAction" asp-route-pageSize="@Model.PageSize" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-query="@Model.Query">Next</a>
            </li>
        }
    </ul>